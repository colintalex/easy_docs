<div id="doc_grid">
  <aside class="js-toc">
  </aside>
  <main class="section">
  <div id="document_header"class="bg-secondary mb-5 p-3 container-fluid">
    <h1>Title: <%= @document.title %></h1>
    <h5>Notes: <%= @document.note %></h5>
  </div>
    <div class="article container">
      <div class="fragments-container" data-controller="sortable">
      <% if @document.fragments.present? %>
        <% @document.fragments.each do |fragment| %>
          <%= render fragment %>
        <% end %>
      <% else %>
        <%= render "fragments/new", position: 0, dom_id: dom_id(Fragment.new) %>
      <% end %>
      </div>
    </div>
  </main>
</div>
